- unless @fundation.events.attended_or_is_going.empty?
  .all-items
    %h3
      = I18n.t('profile.events_calendar')
    - @fundation.events.attended_or_is_going.order("events.date DESC").each do |event|
      .one-item
        = link_to image_tag(event.pic.url(:thumb), :class=>"img-events"), event_path(event.id),:title=>I18n.t('events.show')
        %span
          .one-item-name
            = link_to event.name.size > 30 ? event.name[0.. 30] + "..." : event.name, event
            #{"-"}
            .one-item-date
              = I18n.l(event.date, :format=>:long)
          = link_to I18n.t('events.show'), event
- else
  %p
    = I18n.t('profile.no_assists')
  %a.send-msg{:href=>"#"}#{I18n.t('profile.send_a_msg')}  
