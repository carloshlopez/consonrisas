- unless @facilitator.events.attended.empty?
  %h2
    Eventos a los que este facilitador ha asistido
  .all-items
    - @facilitator.events.attended.each do |event|  
      .one-item
        = link_to image_tag(event.pic.url(:thumb)), event_path(event), :title=>"Click para ver el evento"        
        %span
          .one-item-name
            = link_to event.name, event_path(event)
            = "-"
            = I18n.l(event.date, :format=>:long)
- else
  %p
    = I18n.t('profile.no_assists')
  %a.fac-send-msg{:href=>"#"}#{I18n.t('profile.send_a_msg')}
